            @foreach (var i in result)
            {
                DateTime date1 = DateTime.Now;
                DateTime date2 = i.DateEnd;
                var t = date2 - date1;
                string status;
                string date = "Can Bid";
                if (t.Seconds < 0)
                {
                    status = "OverTime";
                    string sCon = ConfigurationManager.ConnectionStrings["hihi"].ConnectionString;
                    SqlConnection conn = new SqlConnection(sCon);
                    string query = "Update Products Set Status = 'Over Time' Where PId = " + i.PId;
                    string query1 = "Update HistoryAuctions Set Status = 'Winner' Where Status = 'Waiting' and PId = "+i.PId;
                    conn.Open();
                    SqlCommand command = new SqlCommand(query, conn);
                    SqlCommand command1 = new SqlCommand(query1, conn);
                    command.ExecuteNonQuery();
                    command1.ExecuteNonQuery();
                    conn.Close();
                    date = "0 Days 00:00:00";
                }
                else
                {
                    status = "Can Bid";
                }
                if (t.Days <= -3)
                {
                    string SCon1 = ConfigurationManager.ConnectionStrings["hihi"].ConnectionString;
                    SqlConnection conn1 = new SqlConnection(SCon1);
                    string query1 = "Delete From HistoryAuctions Where PId = "+i.PId;
                    string query2 = "Delete From Products Where PId = "+i.PId;
                    conn1.Open();
                    SqlCommand command1 = new SqlCommand(query1,conn1);
                    SqlCommand command2 = new SqlCommand(query2, conn1);

                    command1.ExecuteNonQuery();
                    command2.ExecuteNonQuery();
                    conn1.Close();
                }
                    <div class="col-md-6 col-lg-3 ftco-animate">
                        <div class="product">
                            <a href="/User/GetProduct?PId=@i.PId" class="img-prod">
                                <img class="img-fluid" src="@i.Image" alt="Colorlib Template">
                                <span class="status">@status</span>
                                <div class="overlay"></div>
                            </a>
