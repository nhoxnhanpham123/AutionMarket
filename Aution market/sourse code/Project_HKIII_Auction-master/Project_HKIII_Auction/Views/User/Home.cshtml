                                <h3><a href="#">@i.PName</a></h3>
                                <h3>
                                    <p>Seller: @i.UName</p>
                                    @{
                                        if (date == "0 Days 00:00:00")
                                        {
                                            <span>@date</span>
                                        }
                                        else
                                        {
                                            <span id="time-@i.PId">
                                                <script>
                                                    startTick(@i.PId, @t.Seconds, @t.Minutes, @t.Hours, @t.Days);
                                                </script>
                                            </span>
                                        }
                                    }
