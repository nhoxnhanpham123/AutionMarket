@model IEnumerable<Project_HKIII_Auction.Models.Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@using (Html.BeginForm("SearchCate", "Admin", FormMethod.Post, new { @class = "form-inline" }))
{
    <label class="sr-only" for="inlineFormInputName2">User Name</label>
    @Html.TextBox("txtSearch", null, new { @class = "form-control mb-2 mr-sm-2", @placeholder = "Product Name" })
    <button type="submit" class="btn btn-gradient-primary mb-2">Search</button>
}
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Categories</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Category Id </th>
                                <th> Category Name </th>
                                <th> Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>@i.CId</td>
                                    <td>@i.CName</td>
                                    <td><a href="/Admin/DeleteCategory?CId=@i.CId">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>